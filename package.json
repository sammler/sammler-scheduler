{
  "name": "sammler-scheduler-service",
  "version": "0.3",
  "description": "Scheduler for sammler.",
  "keywords": [
    "sammler"
  ],
  "homepage": "https://github.com/sammler/sammler-scheduler-service",
  "bugs": {
    "url": "https://github.com/sammler/sammler-scheduler-service/issues"
  },
  "license": "MIT",
  "author": {
    "name": "Stefan Walther",
    "url": "https://github.com/stefanwalther",
    "twitter": "waltherstefan"
  },
  "main": "/src/index.js",
  "repository": "sammler/sammler-scheduler-service",
  "scripts": {
    "coverage": "babel-node ./node_modules/.bin/isparta cover _mocha",
    "d-build": "docker build -t sammler/sammler-scheduler-service .",
    "dc-dev-down": "docker-compose --f=./docker-compose.dev.yml down",
    "dc-dev-up": "docker-compose --f=./docker-compose.dev.yml up --build",
    "docs": "verb",
    "lint:src": "eslint src",
    "lint:src:fix": "eslint src --fix",
    "lint:test": "eslint test",
    "lint:test:fix": "eslint test --fix",
    "start": "node ./src/index.js",
    "start:dev": "nodemon -L --watch ./src --exec yarn run start",
    "test": "yarn run test:unit && yarn run test:integration",
    "test:integration": "yarn run lint:test && mocha './test/integration/**/*.spec.js' --require './test/mocha.conf.js'",
    "test:unit": "yarn run lint:test && mocha './test/unit/**/*.spec.js' --require './test/mocha.conf.js'"
  },
  "dependencies": {
    "amqplib": "^0.5.1",
    "node-schedule": "^1.2.0",
    "node-uuid": "^1.4.7",
    "sammler-jobs-service": "sammler/sammler-jobs-service",
    "superagent": "^3.3.1",
    "superagent-promise": "^1.1.0",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.1.1",
    "eslint-config-xo-space": "^0.15.0",
    "eslint-plugin-mocha": "^4.0.0",
    "gulp-format-md": "*",
    "mocha": "*",
    "nyc": "^7.0.0",
    "sammler-base": "sammler/sammler-base"
  },
  "engines": {
    "node": ">=7.0"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
  },
  "verb": {
    "run": true,
    "toc": false,
    "layout": "empty",
    "tasks": [
      "readme"
    ],
    "plugins": [
      "gulp-format-md"
    ],
    "related": {
      "list": []
    },
    "lint": {
      "reflinks": true
    },
    "reflinks": [
      "verb",
      "verb-readme-generator"
    ]
  }
}
