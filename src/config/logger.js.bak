const Winston = require('winston');
const AmqpWinston = require('amqp-winston');

let logger = null;

if (process.env.NODE_ENV === 'test') {
  logger = new (Winston.Logger)({
    transports: [
      new (Winston.transports.File)({filename: 'test-errors.log'})
    ]
  });
} else {
  logger = new Winston.Logger({
    transports: [
      new Winston.transports.Console({
        level: 'debug',
        handleExceptions: true,
        json: false,
        colorize: true
      }),
      new AmqpWinston({
        level: 'silly',
        host: 'amqp://guest:guest@s5r-rabbitmq:5672/winston/winston',
        exchange: 'winston',
        routingKey: 'winston'
      })
    ],
    exitOnError: false
  });
}

